@{
    ViewData["Title"] = "Contact Manager";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container my-4">
    <h1>Contact Manager</h1>

    <!-- Upload form -->
    <div class="card mb-3 p-3">
        <form id="uploadForm" enctype="multipart/form-data" method="post">
            <div class="mb-2">
                <label for="fileInput" class="form-label">Upload CSV</label>
                <input type="file" id="fileInput" name="file" accept=".csv" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
            <span id="uploadStatus" class="ms-3 text-muted"></span>
        </form>
    </div>

    <!-- Filter & Table -->
    <div class="card p-3 mb-3">
        <div class="row mb-2 g-2">
            <div class="col">
                <input type="text" id="searchBox" class="form-control" placeholder="Search..." />
            </div>
        </div>

        <table class="table table-bordered table-hover" id="contactsTable">
            <thead>
                <tr>
                    <th data-column="Name">Name</th>
                    <th data-column="DateOfBirth">Date of Birth</th>
                    <th data-column="Married">Married</th>
                    <th data-column="Phone">Phone</th>
                    <th data-column="Salary">Salary</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Data will be injected here dynamically -->
            </tbody>
        </table>
    </div>
</div>

<!-- Підключаємо скрипти -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/contacts.js"></script>
