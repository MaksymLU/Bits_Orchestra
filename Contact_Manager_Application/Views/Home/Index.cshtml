@{
    ViewData["Title"] = "Contact Manager";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container my-4">
    <h1>Contact Manager</h1>

    <div class="card mb-3 p-3">
        <form id="uploadForm" enctype="multipart/form-data" method="post">
            <div class="mb-2">
                <label for="fileInput" class="form-label">Upload CSV</label>
                <input type="file" id="fileInput" name="file" accept=".csv" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
            <span id="uploadStatus" class="ms-3 text-muted"></span>
        </form>
    </div>

    <div class="card p-3 mb-3">
        <div class="row mb-2 g-2">
            <div class="col">
                <input type="text" id="searchBox" class="form-control" placeholder="Search..." />
            </div>
        </div>

        <table class="table table-bordered table-hover" id="contactsTable">
            <thead>
                <tr>
                    <th>
                        <button class="btn btn-sm btn-outline-primary sort-btn w-100 text-start fw-bold" data-column="Name">
                            Name <span class="sort-indicator"></span>
                        </button>
                    </th>
                    <th>
                        <button class="btn btn-sm btn-outline-primary sort-btn w-100 text-start fw-bold" data-column="DateOfBirth">
                            Date of Birth <span class="sort-indicator"></span>
                        </button>
                    </th>
                    <th>
                        <button class="btn btn-sm btn-outline-primary sort-btn w-100 text-start fw-bold" data-column="Married">
                            Married <span class="sort-indicator"></span>
                        </button>
                    </th>
                    <th>
                        <button class="btn btn-sm btn-outline-primary sort-btn w-100 text-start fw-bold" data-column="Phone">
                            Phone <span class="sort-indicator"></span>
                        </button>
                    </th>
                    <th>
                        <button class="btn btn-sm btn-outline-primary sort-btn w-100 text-start fw-bold" data-column="Salary">
                            Salary <span class="sort-indicator"></span>
                        </button>
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Data will be injected here dynamically -->
            </tbody>
        </table>
    </div>
</div>

<style>
    .sort-btn.active {
        background-color: #0d6efd;
        color: white;
    }

    .sort-indicator {
        float: right;
        font-size: 0.8em;
    }
</style>
<style>
    .btn-save {
        background-color: #4da6ff; 
        border-color: #3399ff;
        color: white;
        font-weight: 500;
    }

    .btn-save:hover {
            background-color: #3399ff;
            border-color: #2673cc;
    }

</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/contacts.js"></script>
